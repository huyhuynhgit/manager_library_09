<tbody>
  <% @categories.each do |category| %>
    <tr>
      <td class="create-tr"><%= link_to category.name, category %></td>
      <% if current_user.admin? %>
        <td><%= link_to t(".edit"), edit_category_path(category) %></td>
        <td>
          <%= link_to t(".delete"), category, method: :delete, data: {confirm: t(".confirm")} %>
        </td>
      <% end %>
    </tr>
  <% end %>
</tbody>
